{
  "name": "@grakchawwaa/discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for SWGOH guild management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "dotenvx run -f .env.dev -- ts-node src/index.ts",
    "prod": "dotenvx run -f .env.prod -- ts-node src/index.ts",
    "clean": "rm -rf dist",
    "reset-commands-dev": "dotenvx run -f .env.dev -- ts-node infra/reset-commands.ts",
    "reset-commands-prod": "dotenvx run -f .env.prod -- ts-node infra/reset-commands.ts",
    "lint": "eslint '**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci"
  },
  "dependencies": {
    "@grakchawwaa/core": "workspace:*",
    "@sapphire/discord.js-utilities": "^7.3.2",
    "@sapphire/framework": "^5.4.0",
    "@sapphire/pieces": "^4.4.1",
    "@swgoh-utils/comlink": "^1.4.1",
    "discord.js": "~14.24.2"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@eslint/js": "^9.39.1",
    "@jest/test-sequencer": "^30.2.0",
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/postgresql": "^6.6.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
