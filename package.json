{
  "name": "grakchawwaa",
  "private": true,
  "version": "1.0.0",
  "description": "SWGOH guild management platform - monorepo",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev:bot": "pnpm --filter @grakchawwaa/discord-bot dev",
    "dev:web": "pnpm --filter @grakchawwaa/web dev",
    "dev:worker": "pnpm --filter @grakchawwaa/worker dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "author": "ExeAy",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
